<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00FFFF"
    android:orientation="vertical">

    <EditText
        android:id="@+id/doctor_city_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter doctor city"
        android:textSize="18sp"
        android:inputType="text"
        android:padding="10dp"
        tools:ignore="HardcodedText"
        android:background="@null"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/doctor_speciality_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter doctor speciality"
        android:textSize="18sp"
        android:inputType="text"
        android:padding="10dp"
        tools:ignore="HardcodedText"
        android:background="@null"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/doctor_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="search"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:ignore="HardcodedText"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_doctor_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>